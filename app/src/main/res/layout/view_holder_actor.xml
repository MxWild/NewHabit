<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/actor"
        android:layout_width="@dimen/margin_8x10"
        android:layout_height="@dimen/margin_8x10"
        android:layout_marginTop="@dimen/margin_2x4"
        android:layout_marginStart="@dimen/margin_2x4"
        android:layout_marginEnd="@dimen/margin_2x4"
        android:contentDescription="@string/actor1"
        tools:src="@drawable/rdm1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/actor_name"
        style="@style/white_14sp"
        android:layout_width="@dimen/margin_8x10"
        android:layout_marginTop="@dimen/margin_2x"
        android:layout_height="wrap_content"
        tools:text="@string/actor1"
        app:layout_constraintStart_toStartOf="@id/actor"
        app:layout_constraintTop_toBottomOf="@id/actor"/>

</androidx.constraintlayout.widget.ConstraintLayout>