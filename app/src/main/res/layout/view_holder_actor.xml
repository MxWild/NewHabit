<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:background="@color/background_color">

    <ImageView
        android:id="@+id/actor"
        android:layout_width="@dimen/margin_8x10"
        android:layout_height="@dimen/margin_8x10"
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/margin_2x2"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/actor_name"
        tools:src="@drawable/rdm1" />

    <TextView
        android:id="@+id/actor_name"
        style="@style/white_14sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2x"
        android:layout_marginBottom="@dimen/margin_2x4"
        app:layout_constraintStart_toStartOf="@id/actor"
        app:layout_constraintEnd_toEndOf="@id/actor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actor"
        tools:text="@string/actor1" />

</androidx.constraintlayout.widget.ConstraintLayout>